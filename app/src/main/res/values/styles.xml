<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wheat</item>
        <item name="colorPrimaryDark">@color/darkolivegreen</item>
        <item name="colorAccent">@color/md_grey_400</item>
        <item name="android:textColor">#000000</item>
        <item name="colorBorder">#000000</item>
        <item name="colorHeader">@color/olive</item>
        <item name="colorError">#FFFFFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/wheat</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/md_grey_400</item>
        <item name="android:textColor">#000000</item>
        <item name="colorBorder">#000000</item>
        <item name="colorHeader">@color/firebrick</item>
        <item name="colorError">#FFFFFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_grey_600</item>
        <item name="colorPrimaryDark">@color/md_grey_800</item>
        <item name="colorAccent">#000022</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorBorder">#FFFFFF</item>
        <item name="colorHeader">@color/md_grey_900</item>
        <item name="colorError">@color/md_grey_600</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- Styles for SampleWelcomeActivity -->
    <style name="WelcomeScreenPageIndicator.Animated">
        <item name="animation">slide</item>
    </style>
    <style name="SampleWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator.Animated</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
        <item name="welcomeLargeTextStyle">@style/WelcomeScreenText.Large.Centered</item>
        <item name="welcomeNormalTextStyle">@style/WelcomeScreenText.Centered</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"

        />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
