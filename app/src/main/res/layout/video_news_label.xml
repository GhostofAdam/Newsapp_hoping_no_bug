<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_border"
    android:paddingTop="@dimen/padding"
    android:paddingBottom="@dimen/padding"
    android:paddingStart="@dimen/news_item_padding"
    android:paddingEnd="@dimen/news_item_padding"
    >
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/item_video_news_title"
        android:layout_width="wrap_content"
        android:textSize="@dimen/main_text_size"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_video_news_subtitle"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:textSize="@dimen/margin_text_size"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        android:layout_height="wrap_content"/>
</LinearLayout>