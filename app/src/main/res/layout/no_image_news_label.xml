<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_border"
    android:paddingTop="@dimen/larger_padding"
    android:paddingBottom="@dimen/larger_padding"
    android:paddingStart="@dimen/news_item_padding"
    android:paddingEnd="@dimen/news_item_padding"
    >
    <TextView
        android:id="@+id/no_image_news_label_title"
        android:layout_width="wrap_content"
        android:textSize="@dimen/main_text_size"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/no_image_news_label_subtitle"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:textSize="@dimen/margin_text_size"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        android:layout_height="wrap_content"/>
</LinearLayout>